{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist-electron",
    "rootDir": "src/main",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules"]
}
