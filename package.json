{
  "name": "novel-writer",
  "version": "0.1.0",
  "description": "AI assisted novel writing desktop app built with Electron, React, and TypeScript",
  "main": "dist-electron/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite dev\" \"npm:electron:dev\"",
    "electron:dev": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && npm run electron:build",
    "electron:build": "tsc -p tsconfig.electron.json && electron-builder",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.452.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "zustand": "^4.5.5",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^7.1.0"
  }
}
